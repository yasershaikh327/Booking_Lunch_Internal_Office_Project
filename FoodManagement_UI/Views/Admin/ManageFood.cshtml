                    </div>
                  </div>
                  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                  <script>
                    $(document).ready(function () {
                      // Add new row on "ADD" button click
                      $("#addButton").click(function () {
                        var newRow = $("<tr>");
                                        var itemInput = $("<input>")
                                            .attr("type", "text")
                                            .addClass("form-control form-control-lg")
                                            .attr("title", "Alphabets Only")
                                            .attr("name", "FoodItems")
                                            .attr("id", "FoodItems")
                                            .prop("required", true);

                        var itemColumn = $("<td>")
                          .css("width", "90%")
                          .append(itemInput);
                        var deleteColumn = $("<td>").append(
                          $("<button>")
                            .attr("type", "button")
                            .addClass("deleteButton")
                            .css({
                              border: "none",
                              background: "none",
                              "font-size": "x-large",
                            })
                                                .append(
                                                    $("<i>")
                                                        .addClass("glyphicon glyphicon-remove")
                                                        .css("font-size", "large")
                                                        .css("color", "red")

                                                ));


                                        var addColumn = $("<td>").append(
                                            $("<button>")

                                            
                                                .attr("onclick", "AddData()")
                                                .css({
                                                    border: "none",
                                                    background: "none",
                                                    "font-size": "x-large",
                                                })
                                                .append(
                                                    $("<i>")
                                                        .addClass(" 	glyphicon glyphicon-ok")
                                                        .css("font-size", "large")
                                                        .css("color", "green")

                                                ));


                        newRow.append(itemColumn, addColumn,deleteColumn);
                        $("#menuTable tbody").append(newRow);
                      });

                      /// Delete row on delete button click
                      $(document).on("click", ".deleteButton", function () {
                        $(this).closest("tr").remove();
                      });
                    });
                  </script>
                </div>
              </div>
            </div>
        </section>
      </div>


