@{
    ViewData["Title"] = "Feedback";
    Layout = "_HomeLayout";
    ViewData["Feedback"] = "hoveratag";
}
<link href="~/home/feedback/css/stylesheet.css" rel="stylesheet" />
<link href="~/css/contactus.css" rel="stylesheet" />
<script src="~/home/feedback/js/javascript.js"></script>
<link href="~/css/logincss.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<div id="sub">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

    <section style="position: relative; top: 12vh; ">
        <div class="row d-flex justify-content-center align-items-center h-100" style="margin: auto; ">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5" style=" height: auto">
                <div class="card shadow-2-strong" style="border-radius: 1rem; margin-top: 10px;opacity: 0.95;">
                    <div class="card-body  text-center">

                        <!-- Select Week -->
                        <div style="display: flex;">
                            <div class="date-container">
                                <input type="date" id="date-input" onchange="fetchWeekOfMonth()" class="form-control form-control-lg" required>
                                <input type="hidden" id="dateinput2" name="Week" />
                                <input type="hidden" id="dateinput3" name="Day" />

                            </div>
                            <label class="form-control-lg" style="text-align:center; font-size: 16px;" id="DaySelection11">Day</label>
                        </div>

                        <br />
                        <div class="form-outline mb-4">
                            <div class="rating" style="margin-bottom: 20px;">
                                <input type="radio" id="star5" name="Rating" value="5" required />
                                <label for="star5"></label>
                                <input type="radio" id="star4" name="Rating" value="4" required />
                                <label for="star4"></label>
                                <input type="radio" id="star3" name="Rating" value="3" required />
                                <label for="star3"></label>
                                <input type="radio" id="star2" name="Rating" value="2" required />
                                <label for="star2"></label>
                                <input type="radio" id="star1" name="Rating" value="1" required />
                                <label for="star1"></label>
                            </div>
                            <textarea class="form-control form-control-lg" placeholder="Your Feedback" style="text-align:center;height: 100px;" name="Feedback" id="Feedback"></textarea>
                        </div>
                        <button class="btn btn-primary" type="button" onclick="AddData()">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>