@{
    ViewData["Title"] = "Show menu";
    Layout = "_HomeLayout";
    ViewData["Menu"] = "hoveratag";
}

<script>
    $(document).ready(function () {
        DisplayVegFood();
        Reminder();
        CheckIfNonvegExists();
    });
</script>
<script src="~/food/showfooditems/js/javascript.js"></script>
<!-- Rest of your view content -->
<div id="sub">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
          crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"></script>
    <section style="position: relative; top: 5vh">
        <div class="row d-flex justify-content-center align-items-center h-100"
             style="margin: auto">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5"
                 style="overflow-y: scroll; height: auto">
                <div class="card shadow-2-strong" style="border-radius: 1rem;opacity: 0.95;">
                    <div class="card-body text-center">
                        <h3 class="mb-4" style="position: inherit; font-size: 20px">
                            Today's Menu
                        </h3>
                        <div class="form-outline mb-4">
                            <!--Select Veg/Non-Veg-->
                            <input type="radio"
                                   value="Veg" onchange="DisplayVegFood()" checked required id="lflexRadioDefault1" style="margin-right: 4px"
                                   name="FoodSelection" />
                            <label for="vegCheckbox" style=" margin-right: 4px;  color: green; font-weight: 900; ">Veg</label>

                            <input type="radio" value="NonVeg" onchange="DisplayNonVegFood()" id="flexRadioDefault2" name="FoodSelection" />
                            <label for="nonvegCheckbox" style="margin-left: 4px; color: maroon; font-weight: 900;" id="nonveg">Non-Veg</label>

                            <!--Show Food Items-->
                            <div style="position: relative;z-index: 0;">

                                <div class="tablediv"
                                     style="max-height: 250px; overflow-y: auto;
                        box-shadow: 0px 2px 6px rgba(26,0,200,0.2);
                        border-top: 1px solid #dcd8f6">
                                    <table id="menuTable"
                                           class="table table-hover"
                                           style="font-size: 14px">
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <a asp-action="Login" asp-controller="Home" class="btn btn-primary btn-lg btn-block" style="text-align: center;margin: 2%;font-size: initial;">
                                Login
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
