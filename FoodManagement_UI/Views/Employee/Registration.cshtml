@{
    ViewData["Title"] = "Registration";
    Layout = "_HomeLayout";
    ViewData["Login"] = "hoveratag";
}
<script src="~/home/registration/js/javascript.js"></script>
<div id="sub">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <section >
        <div class="row d-flex justify-content-center align-items-center h-100" style="    margin: auto;">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5" style=" height: 100%;">
                <div class="card shadow-2-strong" style="border-radius: 1rem;opacity: 0.95;">
                    <div class="card-body p-5 text-center">
                            <h3 class="mb-5">Registration</h3>
                            <div class="form-outline mb-4">
                                <input type="text" id="Name" class="form-control" name="Name" style="text-align:center"  pattern="[A-Z a-z]*" title="Alphabets Only" required placeholder="Name" /><br />
                                <input type="hidden"  id="Email" />
                                <input type="password" id="Password" class="form-control" style="text-align:center"  name="Password" required placeholder="Password" /><br />
                                <input type="password" id="ConfirmPassword" class="form-control" style="text-align:center" name="CPassword" required placeholder="Confirm Password" />
                            </div>
                            <button class="btn btn-primary btn-lg btn-block" type="button" onclick="Registration();">Registration</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>